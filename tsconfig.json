{
    "compilerOptions": {
        "declaration": false,
        "module": "commonjs",
        "jsx": "react",
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "outDir": "lib",
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "typings/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}